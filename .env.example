# Environment Configuration
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/vendor_risk_db
TEST_DATABASE_URL=sqlite:///./test.db

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# LangChain
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Security
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=Vendor Risk AI Agent
APP_VERSION=1.0.0
DEBUG=true

# Document Storage
DOCUMENT_STORAGE_PATH=./storage/documents
MAX_FILE_SIZE=50000000  # 50MB

# Risk Assessment Settings
DEFAULT_RISK_THRESHOLD=70
HIGH_RISK_THRESHOLD=85

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@yourcompany.com

# Vendor Contact Settings
VENDOR_FOLLOWUP_TIMEOUT_DAYS=7
MAX_FOLLOWUP_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="{time} | {level} | {message}"
